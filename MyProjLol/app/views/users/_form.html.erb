<%= form_with(model: user, local: true) do |form| %>
  <fieldset>
    <legend>Create Account</legend>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, :class => 'form-control' %>
    </div>
  </div>

  <div class="field">
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password, :class => 'form-control' %>
  </div>
  </div>

  <div class="field">
    <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation, :class => 'form-control' %>
  </div>
  </div>

  <div class="field">
    <div  class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, id: :user_email, :class => 'form-control' %>
  </div>
  </div>

    <div class="field">
      <div  class="form-group">
        <%= form.label :mobile_number %>
        <%= form.number_field :mobile_number, id: :user_mobile_number, :class => 'form-control' %>
      </div>
    </div>

  <div class="field">
    <div class="form-group">
    <%= form.label :user_type%>
      <%= form.select :user_type, options_for_select([%w(GOVT GOVT), %w(PHARAMA-COMPANY PHARMA-COMPANY),
                                                      %w(COMMON-USER COMMON-USER), %w(ADMIN ADMIN)]), {include_blank: "Select Type"}, {:class => 'form-control' }  %>
    </div>
  </div>

  <%= form.submit :class => 'btn btn-primary'%>
  </fieldset>
<% end %>
